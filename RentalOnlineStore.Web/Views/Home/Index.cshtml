@using RentalOnlineStore.Domain.Models
@model List<Movie>
@{
    ViewData["Title"] = "Movies";
    // var userId = Context.Session.GetInt32("UserId");
}

<h2>Available Movies</h2>

@* @if (userId == null) *@
    <div class="alert alert-info">
        Please <a asp-action="Login" asp-controller="Home">login</a> to rent movies.
    </div>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">
                        <strong>Genre:</strong> @movie.Genre<br>
                        <strong>Available:</strong> @(movie.IsAvailable ? "Yes" : "No")
                    </p>
                    <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>