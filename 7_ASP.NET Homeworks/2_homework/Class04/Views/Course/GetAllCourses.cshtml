@model IEnumerable<CoruseDto>

@{
    string courseTitleHeader = "All Students";
}

<h2>@courseTitleHeader</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name of course</th>
            <th>Number of classes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CoruseDto item in Model)
        {
            <tr>
                <td>@item.CourseName</td>
                <td>@item.NumberOfClasses</td>
            </tr>
        }
    </tbody>
</table>