@using Class04.Models.ViewModels
@model CreateCourseVM

<h2>Create Course</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" action="CreateCourse">
            <div>
                <label for="CourseName">Course Name</label>
                <input type="text" id="CourseName" name="CourseName" />
            </div>
            <div>
                <label for="NumberOfClasses">Number of classes</label>
                <input type="number" id="NumberOfClasses" name="NumberOfClasses" />
            </div>
            <button type="submit">Create</button>
        </form>
    </div>
</div>