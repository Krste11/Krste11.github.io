@using RentalOnlineStore.Domain.DomainModals
@model IEnumerable<Rental>

<h2>Active Rentals</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Movie</th>
            <th>User</th>
            <th>Rented On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                @* <td>@rental.Movie.Title</td> *@
                @* <td>@rental.User.FullName</td> *@
                <td>@rental.RentedOn.ToString("MM/dd/yyyy")</td>
                <td>
                    <form asp-action="ReturnMovie" asp-route-id="@rental.Id" method="post">
                        <button type="submit" class="btn btn-warning btn-sm">Return</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>